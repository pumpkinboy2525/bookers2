
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table>
        <tr>
          <th>Name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <% if user == current_user  %>
        <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div>
 
  <% if user == current_user  %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
</div>

<h1>New Book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>



