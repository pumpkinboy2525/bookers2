<h1>User info</h1>
<div>
  
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>Name<%= @user.name %></h3>
  <h3>Introduction<%= @introduction %></h3>
  <% if @user == current_user  %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>






<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
