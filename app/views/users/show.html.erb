<%= flash[:notice] %>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-3">
        <%= render 'books/user_info', user: @user, book: @book  %>
      </div>
      <div class="offset-1 col-8">
        <h2>Books</h2>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
           <% end %>
        </table>
      </div>
    </div>
  </div>
</main>